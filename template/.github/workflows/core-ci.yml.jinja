name: Continuous integration for development

on:
  pull_request:
    branches: [ main, develop ]
  push:
    branches: [ main, develop ]

{% if "add_mypy" in features or "add_ruff" in features -%}
jobs:
  check:
    name: Lint and check types
    runs-on: "ubuntu-latest"
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.12"
      - name: Install dependencies
        run: |
          python -m pip install ".[check,extra]"
      - name: Lint with Ruff
        run: ruff check metasyn
      - name: Check types with MyPy
        run: mypy metasyn
{% endif -%}

{%- if "add_pytest" in features %}
  test:
    name: Run unit tests
    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-latest]
        python-version: ["3.9", "3.10", "3.11", "3.12", "3.13"]
        include:
            - os: macos-latest
              python-version: "3.13"
            - os: windows-latest
              python-version: "3.13"
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    steps:
    - uses: actions/checkout@v4
    - name: Set up Python {% raw %}${{ matrix.python-version }}{% endraw %}
      uses: actions/setup-python@v5
      with:
        python-version: {% raw %}${{ matrix.python-version }}{% endraw %}
    - name: Install dependencies
      run: |
        python -m pip install -e ".[test]"
    - name: Test with pytest
      if: {% raw %}${{ matrix.python-version != '3.12' }}{% endraw %}  # Either do coverage testing or pytest only
      run: pytest tests
{% endif -%}

{%- if "add_nbval" in features %}
  nbval_test:
    name: Integration tests on notebooks
    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-latest]
        python-version: ["3.9", "3.10", "3.11", "3.12", "3.13"]
        include:
            - os: macos-latest
              python-version: "3.13"
            - os: windows-latest
              python-version: "3.13"
    runs-on: {% raw %}${{ matrix.os }}{% endraw %}
    steps:
    - uses: actions/checkout@v4
    - name: Set up Python {% raw %}${{ matrix.python-version }}{% endraw %}
      uses: actions/setup-python@v5
      with:
        python-version: {% raw %}${{ matrix.python-version }}{% endraw %}
    - name: Install dependencies
      run: |
        python -m pip install -e ".[test]"
    - name: Check notebook output
      run: pytest --nbval-lax examples
{% endif -%}

{%- if "add_coverage" in features %}
  coverage:
    name: Test coverage of unit tests
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
    - name: Set up Python 3.12
      uses: actions/setup-python@v5
      with:
        python-version: "3.12"
    - name: Install dependencies
      run: |
        python -m pip install -e ".[test]"
    - name: Check notebook output
      run: pytest --nbval-lax examples
{% endif -%}

  build-docs:
    name: Build documentation
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4
    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: "3.x"
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        python -m pip install ".[docs]"
    - name: Build docs
      run: sphinx-build -M html docs/source docs/build 
